<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_movie_item_link"
        android:scaleType="fitXY"
        android:src="@drawable/ic_picture_loading"
        android:layout_width="90dp"
        android:layout_height="130dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_movie_item_name"
            android:textColor="@color/gray_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="name"/>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_movie_item_time"
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_movie_item_introduce"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_movie_item_rating"
        android:textColor="@color/colorPrimary"
        android:text="9.9"
        android:textSize="@dimen/text_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>