<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bnl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <cn.wycode.wycode.view.BottomNavigationLayout
        android:id="@+id/bomNavLay_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        bnl:text_color_selected="@color/colorPrimary"
        bnl:text_color_unselected="@color/gray_128" />
</LinearLayout>