<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_music_item"
        android:scaleType="fitXY"
        android:src="@drawable/ic_picture_loading"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_music_item_name"
            android:textColor="@color/gray_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="歌曲名"/>
        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tv_music_item_album"
            android:text="专辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tv_music_item_year"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="年代:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_music_item_artist"
        android:textColor="@color/colorPrimary"
        android:text="艺术家"
        android:textSize="@dimen/text_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>